# Cache Control Headers for Cache Busting
<IfModule mod_headers.c>
    # Force no-cache for HTML files
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Short cache for CSS and JS (with version parameters)
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # Cache images for longer
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>

# ETag removal to prevent caching issues
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Redirect old URLs to new folder structure (SEO)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    # Blog posts: /blog-xxx.html -> /blog/blog-xxx.html
    RewriteRule ^blog-([a-z0-9-]+)\.html$ blog/blog-$1.html [L,R=301]
    # Case studies
    RewriteRule ^case-studies\.html$ case-studies/ [L,R=301]
    RewriteRule ^case-study-john-d\.html$ case-studies/case-study-john-d.html [L,R=301]
    # Legal
    RewriteRule ^privacy-policy\.html$ legal/privacy-policy.html [L,R=301]
    RewriteRule ^terms-of-service\.html$ legal/terms-of-service.html [L,R=301]
</IfModule>
