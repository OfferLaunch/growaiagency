# Cache Control Headers for Cache Busting
<IfModule mod_headers.c>
    # Force no-cache for HTML files
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Short cache for CSS and JS (with version parameters)
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # Cache images for longer
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>

# ETag removal to prevent caching issues
<IfModule mod_headers.c>
    Header unset ETag
</IfModule>
FileETag None

# Redirect old URLs to new folder structure (SEO)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    # Blog: redirect old slug to new (is-grow-ai-legit -> is-grow-ai-legit-and-not-a-scam)
    RewriteRule ^blog/is-grow-ai-legit/?$ /blog/is-grow-ai-legit-and-not-a-scam [L,R=301]
    # Blog: redirect old /blog/blog-* URLs to new /blog/* (drop blog- prefix)
    RewriteRule ^blog/blog-(.+)$ /blog/$1 [L,R=301]
    # Blog: redirect .html to clean URL (e.g. /blog/name.html -> /blog/name)
    RewriteCond %{THE_REQUEST} \s/blog/([a-z0-9-]+)\.html [NC]
    RewriteRule ^blog/([a-z0-9-]+)\.html$ /blog/$1 [L,R=301]
    # Blog: serve .html when clean URL is requested
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^blog/([a-z0-9-]+)/?$ blog/$1.html [L]
    # Blog posts (root-level old URLs): /blog-xxx.html -> /blog/xxx
    RewriteRule ^blog-([a-z0-9-]+)\.html$ /blog/$1 [L,R=301]
    # Case studies: redirect .html to clean URL
    RewriteCond %{THE_REQUEST} \s/case-studies/([a-z0-9-]+)\.html [NC]
    RewriteRule ^case-studies/([a-z0-9-]+)\.html$ /case-studies/$1 [L,R=301]
    # Case studies: serve .html when clean URL is requested
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^case-studies/([a-z0-9-]+)/?$ case-studies/$1.html [L]
    # Case studies (root-level old URLs)
    RewriteRule ^case-studies\.html$ /case-studies/ [L,R=301]
    RewriteRule ^case-study-john-d\.html$ /case-studies/case-study-john-d [L,R=301]
    # Root-level pages: redirect .html to clean URL
    RewriteCond %{THE_REQUEST} \s/(process|software|resources|about|team)\.html [NC]
    RewriteRule ^(process|software|resources|about|team)\.html$ /$1 [L,R=301]
    # Root-level pages: serve .html when clean URL is requested
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(process|software|resources|about|team)/?$ $1.html [L]
    # Legal: redirect old /legal/* URLs to clean root URLs
    RewriteRule ^legal/privacy-policy\.html?$ /privacy-policy [L,R=301]
    RewriteRule ^legal/terms-of-service\.html?$ /terms-of-service [L,R=301]
    # Legal: redirect .html to clean URL
    RewriteCond %{THE_REQUEST} \s/(privacy-policy|terms-of-service)\.html [NC]
    RewriteRule ^(privacy-policy|terms-of-service)\.html$ /$1 [L,R=301]
    # Legal: serve .html when clean URL is requested
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(privacy-policy|terms-of-service)/?$ $1.html [L]
</IfModule>
